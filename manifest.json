{
  "required_api_version": "^2.0.0",
  "name": "Moodle",
  "description": "View upcoming moodle events and access courses",
  "developer_name": "Yehonathan Peretz",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    { "id": "main_kw",
      "type": "keyword",
      "name": "All",
      "description": "View Upcoming events",
      "default_value": "me"
    },
    { "id": "kw_events",
      "type": "keyword",
      "name": "Moodle Upcoming events",
      "description": "View Upcoming events",
      "default_value": "eme"
    },
    {
      "id": "kw_courses",
      "type": "keyword",
      "name": "Moodle courses",
      "description": "View courses",
      "default_value": "cme"
    },
    {
      "id": "site",
      "type": "input",
      "name": "Moodle website URL",
      "description": "e.g. : https://mymoodle.ac/year20",
      "default_value": ""
    },
    {
      "id": "token",
      "type": "input",
      "description": "get from: <moodle-url>/login/token.php?username=<username>&password=<password>&service=moodle_mobile_app",
      "name": "Token",
      "default_value": ""
    },
    {
      "id": "courses_type",
      "type": "select",
      "options": ["Starred","All in-progress"],
      "name": "Type of courses to view",
      "default_value": "All in-progress"
    }
  ]
}

